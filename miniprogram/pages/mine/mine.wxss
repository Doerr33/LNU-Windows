.UCenter-bg {
    background-image: url(https://gimg2.baidu.com/image_search/src=http%3A%2F%2Fs9.rr.itc.cn%2Fr%2FwapChange%2F20172_8_21%2Fa1ogno5638290144542.gif&refer=http%3A%2F%2Fs9.rr.itc.cn&app=2002&size=f9999,10000&q=a80&n=0&g=0n&fmt=jpeg?sec=1638349991&t=8235f85c814e5abf5bd6a6f384a40052);
    background-size: cover;
    height: 550rpx;
    display: flex;
    justify-content: center;
    padding-top: 40rpx;
    overflow: hidden;
    position: relative;
    flex-direction: column;
    align-items: center;
    color: #fff;
    font-weight: 300;
    text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
  }
  
  .UCenter-bg text {
    opacity: 0.8;
  }
  
  .UCenter-bg image {
    width: 200rpx;
    height: 200rpx;
  }
  
  .UCenter-bg .gif-wave{
    position: absolute;
    width: 100%;
    bottom: 0;
    left: 0;
    z-index: 99;
    mix-blend-mode: screen;  
    height: 100rpx;   
  }
  
  map,.mapBox{
    left: 0;
    z-index: 99;
    mix-blend-mode: screen;  
    height: 100rpx;   
  }
  
  map,.mapBox{
    width: 750rpx;
    height: 300rpx;
  }
  .avatarUrl{
    border-radius: 50%;
  }