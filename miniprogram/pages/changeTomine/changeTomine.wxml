<scroll-view scroll-y class="scrollPage">
  <view class="UCenter-bg">
    <image src="{{userInfo.avatarUrl}}" class="avatarUrl"></image>
    <view class="text-xl text-black">{{userInfo.nickName}}
      <text class="text-df text-black">性别</text>
    </view>
    <view class="margin-top-sm">
      <text class = "text-black">专业</text>
    </view>
  </view>
  <button type="primary" formType="submit" style="margin:25rpx;" bindtap = "publishNews">点击私聊</button>
  <view class="cu-list menu card-menu margin-top-xl margin-bottom-xl shadow-lg radius">
    <view class="cu-item arrow">
      <view class="content" bindtap="showQrcode1">
        <text class="cuIcon-attention text-green"></text>
        <text class="text-grey">每日树洞</text>
      </view>
    </view>
    <view class="cu-item arrow">
      <view class="content" bindtap="showQrcode">
        <text class="cuIcon-camera text-yellow"></text>
        <text class="text-grey">辽大相册</text>
      </view>
    </view>
    <view class="cu-item arrow">
      <view class="content" bindtap="showQrcode2">
        <text class="cuIcon-apps text-blue"></text>
        <text class="text-grey">辽大小商城</text>
      </view>
    </view>
    <view class="cu-item arrow">
      <view class="content" bindtap="showQrcode3">
        <text class="cuIcon-appreciatefill text-red"></text>
        <text class="text-grey">赞赏支持</text>
      </view>
    </view>
    <view class="cu-item arrow">
      <view class="content" bindtap="showQrcode4">
        <text class="cuIcon-weixin text-green"></text>
        <text class="text-grey">联系作者</text>
      </view>
    </view>
    <view class="cu-item arrow">
      <button class="cu-btn content" open-type="feedback">
        <text class="cuIcon-writefill text-cyan"></text>
        <text class="text-grey">意见反馈</text>
      </button>
    </view>
  </view>
  <view class="cu-tabbar-height"></view>
</scroll-view>